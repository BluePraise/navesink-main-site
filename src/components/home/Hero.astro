<style>
	.hero {
		min-height: calc(80vh - 70px);
		box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
		background: linear-gradient(
			135deg,
			var(--color-primary) 0%,
			var(--color-secondary) 100%
		);
		padding: 8em 0;
		margin: auto;
		color: #fff;
	}

	.hero p {
		margin: 30px 0;
		text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
	}
	.hero .btn-primary,
	.hero .btn-secondary {
		margin: 0 10px;
	}

	.button-group {
		margin-top: 4em;
	}

	.btn.link:hover {
		text-decoration: underline;
	}
	.unlist li {
		font-size: 1.2rem;
		margin-bottom: 20px;
	}
	.unlist li strong {
		font-family: var(--font-display, sans-serif);
		font-size: 1.4rem;
	}

	/* Rotating text animation */
	.rotating {
		display: inline-block;
		min-width: 200px;
		transition: all 0.2s ease-in-out;
	}

	.rotating.fade-out {
		opacity: 0;
		/* transform: translateY(-20px); */
	}

	.rotating.fade-in {
		opacity: 1;
		transform: translateY(0);
	}
	@media (max-width: 768px) {
		.hero {
			padding: 4em 1em;
		}
		.hero .btn {
			margin: 10px 0;
		}
		.button-group {
			margin-top: 2em;
		}
	}
</style>

<script>
	// Text rotation functionality
	const texts = [
		"Organized.",
		"Simple.",
		"Streamlined.",
		"Secure.",
		"Reliable.",
		"Accessible.",
		"Efficient.",
	];

	let currentIndex = 0;
	const rotatingElement = document.getElementById("rotating-text");

	function rotateText() {
		if (!rotatingElement) return;

		// Add fade-out class
		rotatingElement.classList.add("fade-out");

		// After fade-out completes, change text and fade-in
		setTimeout(() => {
			if (!rotatingElement) return;

			currentIndex = (currentIndex + 1) % texts.length;
			rotatingElement.textContent = texts[currentIndex];
			rotatingElement.classList.remove("fade-out");
			rotatingElement.classList.add("fade-in");

			// Remove fade-in class after animation
			setTimeout(() => {
				if (!rotatingElement) return;
				rotatingElement.classList.remove("fade-in");
			}, 500);
		}, 500);
	}

	// Start the rotation when the page loads
	if (rotatingElement) {
		setInterval(rotateText, 3000); // Change text every 3 seconds
	}
</script>
