---
import { pricing } from "../../data/pricing.js";
---

<section id="pricing">
	<div class="container">
		<div class="text-center mx-auto mb-16">
			<h2 class="display-4">Pricing Plans</h2>
			<p class="lead">Choose the plan that fits your needs</p>
		</div>

		<div class="grid grid-3">
			{
				pricing.map((plan) => (
					<div class="card">
						<h3 class="mb-2 ">{plan.title}</h3>
						<p class="price">{plan.price}</p>
						<p class="text-gray-600 mb-6">{plan.description}</p>
						<ul class="pricing-features unlist">
							{plan.features.map((feature) => (
								<li class="flex items-start">
									<i class="las la-check" />
									<span>{feature}</span>
								</li>
							))}
						</ul>
						<a href="/contact" class="btn btn-primary w-full">
							Get Started
						</a>
					</div>
				))
			}
		</div>
	</div>
</section>
<style>
	#pricing {
		margin-top: 5rem;
		padding: 8em 0;
		background-color: var(--color-primary);
		color: #fff;
	}
	h2 {
		margin-bottom: 1.5rem;
	}
	.lead {
		margin: 0 auto 30px;
	}
	.card {
		text-align: center;
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.pricing-features {
		flex-grow: 1;
		margin-bottom: 2rem;
	}
	.price {
		display: block;
		padding: 1rem 0;
		border-bottom: 1px solid var(--color-primary);
	}

	.pricing-features li {
		border-bottom: 1px solid var(--color-primary);
		padding: 1rem 0;
	}

	.pricing-features li i {
		font-size: 1.2rem;
		color: #fff;
		background-color: var(--color-primary);
		border-radius: 50%;
		margin-right: 0.5rem;
		padding: 0.2rem;
	}

</style>
